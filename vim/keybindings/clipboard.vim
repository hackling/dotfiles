" Yank and put system pasteboard with <Leader>y/p
" noremap <Leader>y "*y
" nnoremap <Leader>yy "*yy
" noremap <Leader>p "*p
" noremap <Leader>P "*P
vim.cmd( 'noremap <Leader>y "+y')
vim.cmd( 'nnoremap <Leader>yy "+yy')
vim.cmd( 'noremap <Leader>p "+p')
vim.cmd( 'noremap <Leader>P "+P')
vim.cmd( 'vmap <Leader>c "+y')
